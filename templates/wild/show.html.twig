{# templates/wild/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster" width="550">

        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            <div>
                <section class="seasons">
                    {% for season in seasons %}
                        <div>
                        <a class="season" href="{{path('wild_season', {'id' : season.id })}}">Saison {{ season.id }} ({{ season.year }})</a>
                            <p>{{ season.description }}</p>
                        </div>
                    {% endfor %}
                </section>
            </div>
        </div>
    </div>

    <a href="{{ path('wild_index') }}">
        Retour
    </a>

{% endblock %}

