{# templates/wild/season.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <h1>Saison {{ season.id }}</h1>
    {% for episode in episodes %}
        <div>
            <h2>Episode {{ episode.number }} : {{ episode.title }}</h2>
            <p>{{ episode.synopsis }}</p>
        </div>
    {% endfor %}


    <a href="{{ path('wild_show', {'slug': program.title|lower|replace({' ':'-'})})}}">
        Retour
    </a>
{% endblock %}